package Ch18;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

class Person{
	private String name;
	private Integer age;
	// 디폴트 생성자
	public Person() {}
	// 모든 인자 생성자
	public Person(String name, Integer age) {
		super();
		this.name = name;
		this.age = age;
	}
	// 게터&세터
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public Integer getAge() {
		return age;
	}
	public void setAge(Integer age) {
		this.age = age;
	}
	// 투스트링
	@Override
	public String toString() {
		return "Person [name=" + name + ", age=" + age + "]";
	}
	
class Employee extends Person{
	private String department;
	private String role;
	// 디폴트 생성자
	public Employee() {}
	// 모든 인자 생성자
	public Employee(String department, String role) {
		super();
		this.department = department;
		this.role = role;
	}
	// 게터 & 세터
	public String getDepartment() {
		return department;
	}

	public void setDepartment(String department) {
		this.department = department;
	}

	public String getRole() {
		return role;
	}

	public void setRole(String role) {
		this.role = role;
	}
	// 투스트링
	@Override
	public String toString() {
		return "Employee [department=" + department + ", role=" + role + "]";
	}
	
	
}
}

public class C01Map {

	public static void main(String[] args) {
		List<Integer> list = Arrays.asList(1, 2, 3, 4, 5);
		System.out.println(list);
		// filter
		List<Integer> list2 = list.stream()
			.filter((n)->{return n%2 == 0;})
			.collect(Collectors.toList());
		System.out.println(list2);
		// map
		List<Integer> list3 = list.stream()
			.filter((n)->{return n%2 == 1;})
			.map((n)->{return n*n;})
			.collect(Collectors.toList());
		System.out.println(list3);
		
		// sorted
		List<Person> list4 = Arrays.asList(
				new Person("코로몬",10),
				new Person("워그레이몬",50),
				new Person("그레이몬",30),
				new Person("아구몬",20),
				new Person("메탈그레이몬",40)				
				);
		
		
		System.out.println(list4);
		// 나이순으로 내림차순정렬해서 출력 .sorted((a,b)->{return b-a;}) // 내림차순
		List<Person> list5 = list4.stream()
			.sorted((a,b)->{return b.getAge()-a.getAge();})
			.collect(Collectors.toList());
			
		list5.forEach(System.out::println);
		
		//
		List<Integer> list6 = list4.stream()
//			 .map((el)->{return el.getAge();})
//			 .map(el->el.getAge())
			 .map(Person::getAge)	// 메서드 참조(::) 이용
			 .collect(Collectors.toList());
		System.out.println(list6);
		
		List<Integer> list7 = list4.stream()
//			.map((el)->{return el.getName();})	
			// 메서드 참조(::) 이용 - Person
			.map(Person::getName)
//			.map((el)->{return el.length();})	
			// 메서드 참조(::) 이용 - String
			.map(String::length)
			.collect(Collectors.toList());
		System.out.println(list7);
			
		}

}
